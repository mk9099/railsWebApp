
<div class= "col-md-8 col-md-offset-1">

<h1><font color="black"><%= t('.title') %></font></h1>
<h5><font color="black"> <%= t('.description') %></font></h5>

<%= form_tag request_contact_path, method: 'post' do %>
  <p><font color="black"><%= label_tag :name, t('.name') %></font></p>
  <font color="black"> <%= text_field_tag :name, '', title: t('.enter_name'), size: 50 %></font>
  <font color="black"> <%= label_tag :email, t('.email') %></font>
  <font color="black"> <%= email_field_tag :email, '', title: t('.enter_email') %></font>
  <font color="black"> <%= label_tag :telephone, t('.telephone') %></font>
  <font color="black"> <%= telephone_field_tag :telephone, '', title: t('.enter_telephone') %></font>
  <font color="black"> <%= label_tag :message, t('.message') %></font>
  <font color="black"> <%= text_field_tag :message, '', title: t('.enter_message'), size: 100 %></font>
  <%= submit_tag t('.Contact_button') %>

<% end %>

<nav class="navbar navbar-left">
  <div class="container">

    <ul class="nav navbar-nav navbar-left" >
      <li><%= link_to "BACK", root_path(@food) %></li>
   </ul>
</div>
</nav>
</div>
